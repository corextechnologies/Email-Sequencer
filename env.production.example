# Production Environment Configuration
NODE_ENV=production
PORT=3007

# Database Configuration
# Replace with your actual production database URL
DATABASE_URL=postgresql://username:password@localhost:5432/email_sequencer_prod

# Alternative database configuration (if not using DATABASE_URL)
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=email_sequencer_prod
# PGUSER=your_db_user
# PGPASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Frontend URLs (update with your actual domains)
FRONTEND_URL=https://yourdomain.com
MOBILE_APP_URL=https://yourdomain.com

# Base URL for the API
BASE_URL=https://yourdomain.com:3007

# Feature Flags
FEATURE_CAMPAIGNS_V2=true

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=5

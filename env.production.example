# Production Environment Configuration
NODE_ENV=production
PORT=3007

# Database Configuration
# Replace with your actual production database URL
DATABASE_URL=postgresql://username:password@localhost:5432/email_sequencer_prod

# Alternative database configuration (if not using DATABASE_URL)
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=email_sequencer_prod
# PGUSER=your_db_user
# PGPASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Email Configuration (Required for transactional emails like password reset)
# Gmail SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=bobos.reset@gmail.com
SMTP_PASS=ResetBobos.ai
SMTP_FROM=bobos.reset@gmail.com

# Note: If Gmail 2FA is enabled, you'll need to use an App Password instead of your regular password
# Generate App Password: https://myaccount.google.com/apppasswords

# Optional: App name for email templates
APP_NAME=Email Sequencer

# Frontend URLs (update with your actual domains)
FRONTEND_URL=https://yourdomain.com
MOBILE_APP_URL=https://yourdomain.com

# Base URL for the API
BASE_URL=https://yourdomain.com:3007

# Feature Flags
FEATURE_CAMPAIGNS_V2=true

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=5
